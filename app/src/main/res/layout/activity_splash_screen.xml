<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#fff">

    <com.jaredrummler.android.widget.AnimatedSvgView
        android:id="@+id/animated_svg_view"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:animatedSvgFillColors="@array/logo_colors"
        app:animatedSvgGlyphStrings="@array/logo_strings"
        app:animatedSvgFillStart="1200"
        app:animatedSvgFillTime="500"
        app:animatedSvgImageSizeX="240"
        app:animatedSvgImageSizeY="240"
        app:animatedSvgTraceTime="2000"
        app:animatedSvgTraceTimePerGlyph="1000"/>
</FrameLayout>